{
  "name": "currentweather",
  "components": {
    "webserver": {
        "pod": "children"
    },
    "webserver/backend": {
      "image": "registry.giantswarm.io/$GIANTSWARM_LOGIN_NAME/currentweather-go:latest",
      "ports": [8080],
      "domains": {
        "8080": "currentweather-$GIANTSWARM_LOGIN_NAME.gigantic.io"
      },
      "args": ["-socket=/tmp/redis.sock"],
      "volumes": [
        {
          "volumes-from": "webserver/redis"
        }
      ]
    },
    "webserver/redis": {
      "image": "registry.giantswarm.io/$GIANTSWARM_LOGIN_NAME/redis-unixsocket:latest",
       "volumes": [
        {
          "path": "/tmp",
          "size": "1 GB"
        }
      ]
    }
  }
}
